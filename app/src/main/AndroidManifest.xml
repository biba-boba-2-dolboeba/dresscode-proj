<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.biba.boba.dresscode">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_profile"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_profile"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".screens.forgot_account_activity.ForgotAccountActivity" />
        <activity android:name=".screens.main_activity.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".screens.signout_activity.SignOutActivity" />
        <activity android:name=".screens.signin_activity.SignInActivity"/>
    </application>

</manifest>